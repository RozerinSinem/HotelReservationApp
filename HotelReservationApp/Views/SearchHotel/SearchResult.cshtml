@model List<HotelReservationApp.Models.Hotel>

<h2>Search Results</h2>

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Hotel Name</th>
                <th>Location</th>
                <th>Capacity</th>
                <th>Description</th>
                <!-- Add more columns if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
            {
                <tr>
                    <td>@hotel.HotelName</td>
                    <td>@hotel.Location</td>
                    <td>@hotel.Capacity</td>
                    <td>@hotel.Description</td>
                    <!-- Add more columns if needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hotels available for the specified criteria.</p>
}
